<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/github_dark">

    <!-- Main Selection Screen -->
    <LinearLayout
        android:id="@+id/layout_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="32dp"
        android:visibility="visible">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_marginBottom="32dp"
            app:cardBackgroundColor="@color/medium_gray"
            app:cardCornerRadius="24dp"
            app:cardElevation="0dp"
            app:strokeWidth="0dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="20dp"
                android:src="@drawable/meshmapper" />
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:text="MeshMapper"
            android:textColor="@color/white"
            android:textSize="36sp"
            android:fontFamily="sans-serif-black" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_wardrive"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:layout_marginBottom="16dp"
            android:text="Wardrive"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:fontFamily="sans-serif-medium"
            app:backgroundTint="@color/purple_500"
            app:cornerRadius="16dp"
            app:icon="@android:drawable/stat_sys_data_bluetooth"
            app:iconGravity="textStart"
            app:iconPadding="12dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_explore"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:layout_marginBottom="16dp"
            android:text="Explore"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:fontFamily="sans-serif-medium"
            app:backgroundTint="@color/purple_200"
            android:textColor="@color/black"
            app:cornerRadius="16dp"
            app:icon="@android:drawable/ic_menu_mapmode"
            app:iconTint="@color/black"
            app:iconGravity="textStart"
            app:iconPadding="12dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_pinned"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:text="Pinned City"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:fontFamily="sans-serif-medium"
            app:backgroundTint="@color/purple_700"
            app:cornerRadius="16dp"
            app:icon="@android:drawable/btn_star_big_on"
            app:iconGravity="textStart"
            app:iconPadding="12dp"
            android:visibility="gone"
            tools:visibility="visible" />
    </LinearLayout>

    <!-- Explore City Selection Screen -->
    <LinearLayout
        android:id="@+id/layout_explore"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="24dp"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:background="#161B22">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select a city by airport code"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:fontFamily="sans-serif-black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Explore the mesh network in your area or visit meshmapper.net for more."
                android:textColor="#8B949E"
                android:textSize="14sp" />
        </LinearLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp">

            <GridLayout
                android:id="@+id/grid_cities"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:padding="12dp"
                android:alignmentMode="alignMargins">
                <!-- Buttons will be added here -->
            </GridLayout>
        </androidx.core.widget.NestedScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="#161B22">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="ðŸ’¡ Long press a city to pin it to the start screen."
                android:textColor="#8B949E"
                android:textSize="12sp"
                android:gravity="center" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_home"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Visit MeshMapper.net"
                android:textAllCaps="false"
                app:backgroundTint="@color/purple_700"
                app:cornerRadius="12dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_back"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="â† Go Back"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:textColor="#8B949E"
                android:textAllCaps="false" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>